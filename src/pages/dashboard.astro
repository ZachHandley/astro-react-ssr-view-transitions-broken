---
import MainLayout from "../components/layouts/MainLayout.astro";
---

<MainLayout title="Dashboard" user={{ id: "1", name: "Test User" }}>
  <div class="p-8">
    <h1 class="text-4xl font-bold text-white mb-8">Dashboard</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="bg-green-800 p-6 rounded-lg">
        <h3 class="text-xl font-bold text-white mb-2">Stats</h3>
        <p class="text-gray-300">Your dashboard statistics</p>
      </div>
      <div class="bg-purple-800 p-6 rounded-lg">
        <h3 class="text-xl font-bold text-white mb-2">Analytics</h3>
        <p class="text-gray-300">View your analytics</p>
      </div>
    </div>
    <div class="mt-8">
      <a href="/" class="bg-gray-500 hover:bg-gray-600 text-white px-6 py-3 rounded-lg transition-colors">
        Back to Home
      </a>
      <a href="/profile" class="bg-purple-500 hover:bg-purple-600 text-white px-6 py-3 rounded-lg transition-colors ml-4">
        Go to Profile
      </a>
    </div>
  </div>
</MainLayout>