---
import MainLayout from "../components/layouts/MainLayout.astro";

const user = await Astro.session?.get("user");
---

<MainLayout title="Home" user={user}>
  <div class="p-8">
    <h1 class="text-4xl font-bold text-white mb-8">Home Page</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {[1, 2, 3, 4, 5, 6].map((item) => (
        <div class="bg-gray-800 p-6 rounded-lg">
          <h3 class="text-xl font-bold text-white mb-2">Card {item}</h3>
          <p class="text-gray-300">Some content for card {item}</p>
        </div>
      ))}
    </div>
    <div class="mt-8">
      <a href="/dashboard" class="bg-blue-500 hover:bg-blue-600 text-white px-6 py-3 rounded-lg transition-colors">
        Go to Dashboard
      </a>
    </div>
  </div>
</MainLayout>